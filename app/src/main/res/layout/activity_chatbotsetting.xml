<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/Cardlight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_10"
                android:contentDescription="Chatbots" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Chatbot Settings"
                android:layout_weight="1"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/statustext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Status"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/carddark"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"/>
                <RadioButton
                    android:id="@+id/disable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disable"
                    android:textSize="14dp"
                    android:textColor="@color/carddark"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/Apikeytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI ApiKey"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"/>
              <EditText
                        android:id="@+id/aiapi"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                  android:background="@color/edittextback"
                  android:hint="Enter API key"
                  android:textColorHint="#6E95B3"
                  android:textColor="#3E4775"
                  android:textStyle="bold"
                  android:textSize="16dp"
                  android:layout_gravity="center_vertical"
                  android:padding="4dp"
                  android:layout_margin="4dp"
                  android:paddingStart="25dp"
                        android:inputType="text"
                        android:fontFamily="@font/gpp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/Aitemptxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Temperature"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"/>

                <TextView
                    android:id="@+id/Aitemp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"
                    android:textColor="@color/carddark"
                    android:textSize="18sp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/Cardlight"
                app:cardCornerRadius="10dp">

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_indicator_color="@color/purple_200"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:isb_indicator_text_color="@color/purple_200"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="20"
                    app:isb_min="0"
                    app:isb_only_thumb_draggable="false"
                    app:isb_progress="6"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_tick_mark_type="none"
                    app:isb_show_tick_text="false"
                    app:isb_thumb_color="@color/purple_200"
                    app:isb_thumb_size="20dp"
                    app:isb_tick_count="20"
                    app:isb_tick_mark_size="13dp"
                    app:isb_tick_text_size="15sp"
                    app:isb_track_background_color="@color/white"
                    app:isb_track_background_size="2dp"
                    app:isb_track_progress_color="@color/purple_200"
                    app:isb_track_progress_size="4dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:visibility="gone"
                    android:gravity="start"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
                    <EditText
                        android:id="@+id/temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Cardlight"
                        android:hint="Temperature"
                        android:text="0.6"

                        android:textColorHint="@color/carddark"
                        android:textStyle="bold"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/gpp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/aimodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Model"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"/>
             <EditText
                        android:id="@+id/model"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="start"
                 android:background="@color/edittextback"
                 android:hint="Enter name"
                 android:textColorHint="#6E95B3"
                 android:textColor="#3E4775"
                 android:textStyle="bold"
                 android:textSize="16dp"
                 android:padding="4dp"
                 android:layout_margin="4dp"
                 android:paddingStart="25dp"
                        android:text="gpt-3.5-turbo"
                        />

            <TextView
                android:id="@+id/starttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat keyword to Enable bot"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"/>
                   <EditText
                        android:id="@+id/startedit"
                        android:layout_width="match_parent"

                       android:layout_height="55dp"
                       android:layout_gravity="start"
                       android:background="@color/edittextback"

                       android:textColorHint="#6E95B3"
                       android:textColor="#3E4775"
                       android:textStyle="bold"
                       android:textSize="16dp"
                       android:padding="4dp"
                       android:layout_margin="4dp"
                       android:paddingStart="25dp"
                       android:text="Start"/>

    <TextView
                android:id="@+id/stoptxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat keyword to Enable bot"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"/>
               <EditText
                        android:id="@+id/stopedit"
                   android:layout_width="match_parent"
                   android:layout_height="55dp"
                   android:layout_gravity="start"
                   android:background="@color/edittextback"
                   android:textColorHint="#6E95B3"
                   android:textColor="#3E4775"
                   android:textStyle="bold"
                   android:textSize="16dp"
                   android:padding="4dp"
                   android:layout_margin="4dp"
                   android:paddingStart="25dp"
                   android:text="Stop" />


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Save"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>