<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/contactadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="360dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/Cardlight">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_margin="4dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logobulk"
                        android:padding="4dp">
                    </ImageView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/createabot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gpp"
                android:text="@string/app_name"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/carddark"
                android:textSize="22sp"
                android:textStyle="bold" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
            <TextView
                android:id="@+id/haddertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gpp"
                android:text="Heading txt"
                android:textColor="@color/carddark"
                android:textSize="18sp"
                android:textStyle="bold" />
    <TextView
        android:id="@+id/featuresheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gpp"
        android:text="Features"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/carddark"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gpp"
        android:text="Features"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/carddark"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/gpp"
        android:text="@string/mail"
        android:layout_marginTop="10dp"
        android:textColor="@color/textblue"
        android:textSize="18sp"
        android:textStyle="bold" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Contact Us"
        android:textColor="@color/white"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Privacy Policy"
        android:textColor="@color/white"/>


</LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>