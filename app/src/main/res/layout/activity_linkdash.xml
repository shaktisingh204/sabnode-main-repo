<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@drawable/ic_goal" />

            <TextView
                android:id="@+id/titletxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gpp"
                android:gravity="center_vertical"
                android:text="Short Link"
                android:textColor="@color/carddark"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">
    <ScrollView
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical">
                <LinearLayout
                    android:id="@+id/nameback"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/newedittext">

                    <EditText
                        android:id="@+id/longurl"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@android:color/transparent"
                        android:textColorHint="#717595"
                        android:textColor="#3E4775"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:hint="paste or enter long url"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:paddingStart="25dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/gpp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/copynewurl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/newedittext">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/newurl"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@android:color/transparent"
                            android:textColorHint="#717595"
                            android:textColor="#3E4775"
                            android:layout_weight="1"
                            android:text="https://linkshort.sabnode.com/jsyVz"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            android:paddingStart="25dp"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/gpp"/>
                    </HorizontalScrollView>
                    <ImageView
                        android:id="@+id/copy"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/copy"
                        android:scaleType="fitCenter"
                        android:background="@color/transparent"
                        android:padding="5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/shorten"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Shorten"
                    android:textColor="@color/white"
                    android:background="@color/md_indigo_900"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="@font/gpp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white" >
                    <TextView
                        android:id="@+id/links"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:text="Links"
                        android:textColor="@color/md_pink_900"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/gpp"/>
                    <TextView
                        android:id="@+id/linksc"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="1000"
                        android:layout_weight="1"
                        android:textColor="@color/md_blue_900"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:fontFamily="@font/gpp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white" >
                    <TextView
                        android:id="@+id/clicks"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:text="Clicks"
                        android:textColor="@color/md_purple_900"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/gpp"/>
                    <TextView
                        android:id="@+id/clicksc"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="50"
                        android:layout_weight="1"
                        android:textColor="@color/md_blue_900"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:fontFamily="@font/gpp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:layout_weight="1"
                />

        </LinearLayout>
    </ScrollView>
   <include layout="@layout/qrtab" />
    <include layout="@layout/biopages" />
    <include layout="@layout/linkstats" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <LinearLayout
            android:id="@+id/dashb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/homeic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_ldashbold"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/dashtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:fontFamily="@font/gpp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/purple_500"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/goleb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/goalic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_lbio"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/goaltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio Pages"
                android:fontFamily="@font/gpp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/md_purple_100"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/realb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/realic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_lqr"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/realtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gpp"
                android:text="Qr Codes"
                android:textColor="@color/md_purple_100"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/teamsb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/teamic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_lstats"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/teamtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:fontFamily="@font/gpp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/md_purple_100"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>