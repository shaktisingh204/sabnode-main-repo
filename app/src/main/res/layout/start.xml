<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="360dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/logos"
                android:layout_gravity="center_vertical|center_horizontal"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:id="@+id/card1"
    app:cardBackgroundColor="@color/md_purple_100"
    app:cardCornerRadius="360dp"
    app:cardElevation="2dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:translationY="-80dp"
    android:translationX="-80dp"
    android:layout_width="95dp"
    android:layout_height="95dp"
    android:padding="10dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/qrcode"/>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:id="@+id/card2"
    app:cardBackgroundColor="@color/md_blue_100"
    app:cardCornerRadius="360dp"
    app:cardElevation="2dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:translationY="-150dp"
    android:translationX="60dp"
    android:layout_width="115dp"
    android:layout_height="115dp"
    android:padding="10dp"

    >
    <ImageView
        android:layout_width="60dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/phoneic"/>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:id="@+id/card3"
    app:cardBackgroundColor="@color/md_pink_100"
    app:cardCornerRadius="360dp"
    app:cardElevation="2dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:translationY="-160dp"
    android:translationX="-100dp"
    android:layout_width="105dp"
    android:layout_height="105dp"
    android:padding="10dp"

    >
    <ImageView
        android:layout_width="70dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/chatbot"/>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="360dp"
        app:cardElevation="2dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:translationY="-220dp"
        android:translationX="60dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="10dp"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logos"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Us Today!"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/gpp"
            android:visibility="visible"
            android:textColor="#172f4a"
            android:textSize="28dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sing In"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/gpp"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:background="@color/md_blue_A700"
            android:layout_gravity="center_horizontal|center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sing Up"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/gpp"
            android:visibility="visible"
            android:textColor="@color/md_blue_A700"
            android:textSize="20dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            />

    </LinearLayout>
</LinearLayout>