<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:alpha=".95">
 <!--   <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center_horizontal|center_vertical"
      android:layout_margin="10dp"
        android:background="@color/Cardlight"
        android:padding="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/gpp"
                android:textColor="#172f4a"
                android:textSize="28dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in, and Start your whatsapp marketing now."
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/gpp"
                android:textColor="#497695"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/logo"
    android:visibility="gone"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal|center_vertical" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/edittextback"
        android:hint="Email"
        android:textColorHint="#6E95B3"
        android:textColor="#3E4775"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:paddingStart="25dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/gpp"/>

                <EditText
                        android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/edittextback"
                    android:hint="Password"
                    android:textColorHint="#6E95B3"
                    android:textColor="#3E4775"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:paddingStart="25dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/gpp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
<com.google.android.material.button.MaterialButton
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Login"
    app:backgroundTint="#0077f9"/>
</LinearLayout>
        </LinearLayout>
<!--
    </androidx.cardview.widget.CardView>
-->
    <LinearLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:gravity="center_vertical|center_horizontal"
        android:fontFamily="@font/gpp"
        android:textColor="#6184AA"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up!"
        android:gravity="center_vertical|center_horizontal"
        android:fontFamily="@font/gpp"
        android:textColor="#0077f9"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>


</LinearLayout>
</LinearLayout>