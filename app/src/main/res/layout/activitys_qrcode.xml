<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@drawable/ic_goal" />

            <TextView
                android:id="@+id/titletxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gpp"
                android:gravity="center_vertical"
                android:text="Create QR Code"
                android:textColor="@color/carddark"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/newlink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plus"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gpp"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="@color/carddark"
                android:textSize="16sp"
                />
            <LinearLayout
                android:id="@+id/phonesback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="4dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/newedittext">

                <EditText
                    android:id="@+id/phonetext"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:textColorHint="#717595"
                    android:textColor="#3E4775"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:paddingStart="25dp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/gpp"/>

            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gpp"
                    android:gravity="center_vertical"
                    android:text="Project"
                    android:textColor="@color/carddark"
                    android:textSize="14dp"
                    />
                <LinearLayout
                    android:id="@+id/advanceback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/newedittext">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Text"
                        android:background="@android:color/transparent"
                        android:textColor="#3E4775"
                        android:textStyle="bold"
                        android:textSize="18dp"

                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/gpp"/>
                    <ImageView
                        android:id="@+id/chooseica"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/sort"
                        android:padding="7dp"/>
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gpp"
                android:gravity="center_vertical"
                android:text="Text Content"
                android:textColor="@color/carddark"
                android:textSize="14dp"
                />
            <LinearLayout
                android:id="@+id/startback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="4dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/newedittext">

                <EditText
                    android:id="@+id/start"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:textColorHint="#717595"
                    android:textColor="#3E4775"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:inputType="datetime"
                    android:fontFamily="@font/gpp"/>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>