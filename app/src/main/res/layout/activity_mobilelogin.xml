<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/bgimg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="360dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/logos"
                android:layout_gravity="center_vertical|center_horizontal"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="360dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/gpp"
                android:visibility="visible"
                android:textColor="#172f4a"
                android:textSize="18dp"
                android:layout_margin="4dp"

                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/gpp"
                android:visibility="visible"
                android:textColor="#172f4a"
                android:textSize="28dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back! Log in to your account."
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/gpp"
                android:textColor="#497695"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:id="@+id/phoneback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/newedittext">
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Mobile Number"
                    android:background="@android:color/transparent"
                    android:textColorHint="#717595"
                    android:textColor="#3E4775"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:paddingStart="25dp"
                    android:inputType="phone"
                    android:fontFamily="@font/gpp"/>
                <ImageView
                    android:id="@+id/phoneic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/phoneic"/>
            </LinearLayout>
            <com.kevinschildhorn.otpview.OTPView
                android:id="@+id/otp_view"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                app:otp_allcaps="true"
                app:otp_showCursor="true"
                app:otp_Font="@font/gpp"
                android:inputType="phone"
                app:otp_itemCount="6"
                android:autofillHints="phone"
                app:otp_itemHeight="50dp"
                app:otp_itemWidth="50dp"/>
            <TextView
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Send Otp"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/gpp"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:background="@color/md_blue_A700"
                android:layout_gravity="center_horizontal|center_vertical"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
