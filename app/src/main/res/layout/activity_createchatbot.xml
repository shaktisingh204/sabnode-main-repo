                <TextView
                    android:id="@+id/captiontxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caption"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"
                    android:textColor="@color/carddark"
                    android:textSize="18sp"/>

                        <EditText
                            android:id="@+id/captionedit"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/edittextback"
                            android:hint="Enter caption here"
                            android:textColorHint="#6E95B3"
                            android:textColor="#3E4775"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            android:layout_margin="4dp"
                            android:paddingStart="25dp"
                            android:inputType="text" />

                <TextView
                    android:id="@+id/Savedatatxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use AI"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"
                    android:textColor="@color/carddark"
                    android:textSize="18sp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/nouseai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not use AI"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/carddark"
                        android:textStyle="bold"
                        android:fontFamily="@font/gpp"/>
                    <RadioButton
                        android:id="@+id/useai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use AI"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:textColor="@color/carddark"
                        android:textStyle="bold"
                        android:fontFamily="@font/gpp"/>
                </RadioGroup>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Save"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>