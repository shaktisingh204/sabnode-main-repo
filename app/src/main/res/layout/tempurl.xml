<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/tempurlline"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <Switch
            android:id="@+id/scheduleswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:checked="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Schedule"
            android:textStyle="bold"
            android:textColor="@color/carddark"
            android:textSize="18sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Configure the dates on which it will work."
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/scheduleline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Start date"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/startback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:inputType="datetime"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="End date"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/endback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:inputType="datetime"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Clicks Limit"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/clicksback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/clicks"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Only allow the link to work for a certain amount of clicks."
            android:textColor="@color/carddark"
            android:textSize="12dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Expiration URL"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/expireback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/expire"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Visitors will be redirected to this URL after the main link expires."
            android:textColor="@color/carddark"
            android:textSize="12dp"
            />

    </LinearLayout>

</LinearLayout>