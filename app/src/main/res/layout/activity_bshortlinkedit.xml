<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/smssline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/link"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gpp"
                android:gravity="center_vertical"
                android:text="nde5od6"
                android:textColor="@color/carddark"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Destination URL"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/phonesback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/phonetext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:hint="https://"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text=" Short URL"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/messageback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:background="@android:color/transparent"
    android:textColorHint="#717595"
    android:textColor="#3E4775"
    android:textStyle="bold"
    android:gravity="center_vertical"
    android:textSize="14dp"
    android:text="biolink.sabnode.com/"
    android:layout_gravity="center_vertical"
    android:padding="4dp"
    android:fontFamily="@font/gpp"
    tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/messagetext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:hint="your-custom-alias"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Leave empty for a randomly generated one."
            android:textColor="@color/carddark"
            android:textSize="12dp"
            />

    </LinearLayout>
</LinearLayout>