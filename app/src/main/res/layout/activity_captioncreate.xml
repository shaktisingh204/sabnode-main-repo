<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/Cardlight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_33"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caption Update"
                android:layout_weight="1"
                android:textStyle="bold"
                android:fontFamily="@font/gpp"
                android:textColor="@color/carddark"
                android:textSize="18sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp">
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:gravity="center_horizontal|center_vertical"
        android:textStyle="bold"
        android:fontFamily="@font/gpp"
        android:layout_margin="5dp"
        android:textColor="@color/carddark"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/Totalgreenlight"
        app:cardCornerRadius="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:gravity="start"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
            <EditText
                android:id="@+id/titletxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="Enter Title"
                android:textColorHint="@color/carddark"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="text"
                android:fontFamily="@font/gpp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>
         <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:gravity="center_horizontal|center_vertical"
        android:textStyle="bold"
        android:fontFamily="@font/gpp"
        android:layout_margin="5dp"
        android:textColor="@color/carddark"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/Totalgreenlight"
        app:cardCornerRadius="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:gravity="start"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
            <EditText
                android:id="@+id/captiontxt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:hint="Enter Caption"
                android:textColorHint="@color/carddark"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="text"
                android:fontFamily="@font/gpp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Save"
        android:textColor="@color/white"/>

</LinearLayout>