<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/Cardlight">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_13"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Phone numbers"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/gpp"
                        android:textColor="@color/carddark"
                        android:textSize="18sp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add multiple phone numbers"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"
                    android:textColor="@color/carddark"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/Totalgreenlight"
                    app:cardCornerRadius="10dp">
                   <!-- <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:background="@drawable/border"
                        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
              -->
                    <EditText
                            android:id="@+id/numbers"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/border"
                            android:hint="Validate exapmle:
                            841234567890
                            840123456789
                            +840123456798"
                            android:textColorHint="@color/carddark"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:gravity="start"
                            android:inputType="textPhonetic"
                            android:digits="0123456789+-,*/%$#@!&amp;()\n"
                            android:fontFamily="@font/gpp"/>
<!--
                    </com.google.android.material.textfield.TextInputLayout>
-->

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validate exapmle: 841234567890, 840123456789, +840123456798,"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"
                    android:textColor="@color/carddark"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Add"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Import Mobile Contacts"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickFile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Pick CSV File"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDlFile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Download Example"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>