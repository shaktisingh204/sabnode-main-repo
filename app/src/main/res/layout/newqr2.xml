            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Phone Number"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/phonesback2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/phonetext2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:hint="e. g. 1234567890"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Message"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/messageback2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/messagetext2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:hint="e. g. Job Application"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cryptosline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/ic012"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gpp"
                android:gravity="center_vertical"
                android:text="Crypto"
                android:textColor="@color/carddark"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Cryptocurrency"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/fileback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/newedittext">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/btc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin"
                    android:textSize="14dp"
                    android:checked="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/carddark"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"/>
                <RadioButton
                    android:id="@+id/eth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ethereum"
                    android:textSize="14dp"
                    android:textColor="@color/carddark"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"/>
                <RadioButton
                    android:id="@+id/btcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin Cash"
                    android:textSize="14dp"
                    android:textColor="@color/carddark"
                    android:textStyle="bold"
                    android:fontFamily="@font/gpp"/>
            </RadioGroup>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Wallet Address"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />

        <LinearLayout
            android:id="@+id/walletback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/wallettext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:hint="Enter Your Public Wallet Address"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>

    </LinearLayout>
<include  layout="@layout/newqr3" />
</LinearLayout>