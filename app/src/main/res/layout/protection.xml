<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/protectionline"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="@color/carddark"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/passwordback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/newedittext">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:textColorHint="#717595"
                android:textColor="#3E4775"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/gpp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gpp"
            android:gravity="center_vertical"
            android:text="Require users to enter a password before accessing the link."
            android:textColor="@color/carddark"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <Switch
            android:id="@+id/scheduleswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:checked="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Sensitive content warning"
                android:textStyle="bold"
                android:textColor="@color/carddark"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Require users to confirm that they want to access your link and letting them know that the link might be sensitive."
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>